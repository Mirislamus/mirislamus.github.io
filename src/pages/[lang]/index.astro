---
import type { Locale } from '@typings/global';
import Layout from '@layouts/Layout.astro';
import { Approach, Hero } from '@widgets/components';

const { currentLocale } = Astro;

export function getStaticPaths() {
  return [{ params: { lang: 'uz' } }, { params: { lang: 'ru' } }];
}
---

<Layout>
  <Hero locale={currentLocale as Locale} client:load />
  <Approach locale={currentLocale as Locale} client:load />
</Layout>
