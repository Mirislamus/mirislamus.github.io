---
import type { Locale } from '@typings/global';
import Layout from '@layouts/Layout.astro';
import { Approach, Hero, Skills, Career, Projects, Reviews } from '@widgets/components';

const locale = Astro.currentLocale as Locale;
---

<Layout>
  <Hero locale={locale} client:load />
  <Approach locale={locale} client:load />
  <Skills locale={locale} client:load />
  <Career locale={locale} client:load />
  <Projects locale={locale} client:load />
  <Reviews locale={locale} client:load />
</Layout>
