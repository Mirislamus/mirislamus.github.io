{
  "plugins": ["prettier-plugin-astro"],
  "overrides": [
    {
      "files": "*.astro",
      "options": {
        "parser": "astro"
      }
    }
  ],
  "proseWrap": "never",
  "semi": true,
  "trailingComma": "es5",
  "singleQuote": true,
  "jsxSingleQuote": false,
  "printWidth": 120,
  "tabWidth": 2,
  "bracketSpacing": true,
  "endOfLine": "lf",
  "arrowParens": "avoid"
}
